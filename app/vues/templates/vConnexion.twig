<div class="bg bg--blue">
	<div class="wrapper">
		<h1>{{ titre|upper }}</h1>
	</div>
</div>
<div class="hero hero--connexion">
	<div class="wrapper">
		<section class="wrapper">
			<form class="connexion" method="POST" action="admin?entite=utilisateur&action=u_connexion">
				<div>
					<label>Courriel</label>
					<input name="utilisateur_courriel" value="{{ utilisateur.utilisateur_courriel }}">
				</div> 
				<div>
					<label>Mot de passe</label>
					<input type="password" name="utilisateur_mdp" value="{{ utilisateur.utilisateur_mdp }}">
				</div>
				<input class="btn" type="submit" value="Se connecter">
				<span>{{ messageErreurConnexion }}</span>
			</form>
			<p>Pas encore membre ?</p>
			<a class="link--border" href="admin?entite=utilisateur&action=u_ajouter">Inscrivez-vous !</a><img class="icone-link-arrow" src="assets/img/png/icone-link-arrow.png" alt="icone fleche link"/>
		</section>
	</div>
</div>